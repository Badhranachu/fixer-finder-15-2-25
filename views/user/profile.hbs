  .profile-container {
      padding-top: 50px;
  }

  /* Heading */
  .profile-heading {
      font-size: 28px;
      color: #ffffff;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 20px;
  }

  /* Profile Card */
  .profile-card {
      background: #1e1e1e;
