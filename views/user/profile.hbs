      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  }

  .profile-card:hover {
      transform: translateY(-5px);
      box-shadow: 0px 10px 30px rgba(0, 255, 255, 0.4);
  }

  /* Profile Header */
  .profile-header {
      background: #007bff;
      padding: 10px;
