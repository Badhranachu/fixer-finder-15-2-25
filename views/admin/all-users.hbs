<div class="container mt-5 dark-theme">
  <h2 class="text-center">All Users</h2>
  <div class="table-responsive">
    <table class="table table-dark table-striped table-bordered mt-4">
      <thead>
        <tr>
          <th>#</th>
          <th>Profile Image</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Address</th>
          <th>Place</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{@index}}</td>
          <td>
            <img src="{{this.imagePath}}" alt="Profile Image" width="50" height="50" class="profile-img">
          </td>
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          <td>{{this.PhoneNumber}}</td>
          <td>{{this.Address}}</td>
          <td>{{this.Place}}</td>
        </tr>
        {{else}}
        <tr>
          <td colspan="7" class="text-center no-users">No users found</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<!-- Link to Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

<!-- Dark Theme Styles -->
<style>
  /* Full Page Dark Background */
  body {
    background-color: black !important;
    color: #e0e0e0;
    margin: 0;
    padding: 0;
  }

  /* Dark Theme for Content */
  .dark-theme {
    background-color: #121212;
    color: #e0e0e0;
    padding: 40px;
    border-radius: 10px;
    width: 100%;
    min-height: 100vh;
  }

  .no-users {
    font-size: 1.5rem;
    color: #b0b0b0;
    font-family: 'Roboto', sans-serif;
  }

  /* Table Styling */
  .table-dark {
    background-color: #1e1e1e;
    color: #e0e0e0;
  }

  .table-dark th {
    background-color: #333;
    color: white;
    font-size: 1.1rem;
    font-family: Arial, sans-serif;
  }

  .table-dark td {
    background-color: #252525;
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    color: #e0e0e0;
  }

  .table-bordered th,
  .table-bordered td {
    border-color: #444;
  }

  th, td {
    text-align: center;
    vertical-align: middle;
  }

  /* Profile Image Styling */
  .profile-img {
    border-radius: 50%;
    object-fit: cover;
  }
</style>
